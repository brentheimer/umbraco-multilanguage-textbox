<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <OurUmbracoMultilanguageTextboxContentFilesPath>$(MSBuildThisFileDirectory)..\content\App_Plugins\Our.Umbraco.MultilanguageTextbox\**\*.*</OurUmbracoMultilanguageTextboxContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyOurUmbracoMultilanguageTextboxContentAssets" BeforeTargets="Build">
        <ItemGroup>
          <OurUmbracoMultilanguageTextboxContentFiles Include="$(OurUmbracoMultilanguageTextboxContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying OurUmbracoMultilanguageTextbox files: $(OurUmbracoMultilanguageTextboxContentFilesPath) - #@(OurUmbracoMultilanguageTextboxContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(OurUmbracoMultilanguageTextboxContentFiles)"
            DestinationFiles="@(OurUmbracoMultilanguageTextboxContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.MultilanguageTextbox\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />
    </Target>

    <Target Name="ClearOurUmbracoMultilanguageTextboxContentAssets" BeforeTargets="Clean">
        <ItemGroup>
          <OurUmbracoMultilanguageTextboxDir Include="$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.MultilanguageTextbox\" />
        </ItemGroup>
        <Message Text="Clear old OurUmbracoMultilanguageTextbox data"  Importance="high" />
        <RemoveDir Directories="@(OurUmbracoMultilanguageTextboxDir)"  />
    </Target>

</Project>
